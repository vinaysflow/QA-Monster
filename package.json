{
  "name": "qa-monster-agent",
  "version": "1.0.0",
  "description": "Autonomous code reading agent for comprehensive QA test generation",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "qa-monster": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli/index.js serve",
    "serve": "node dist/cli/index.js serve",
    "dev": "tsx src/cli/index.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "qa",
    "testing",
    "test-generation",
    "code-analysis",
    "ai"
  ],
  "author": "",
  "license": "UNLICENSED",
  "dependencies": {
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "glob": "^10.3.10",
    "openai": "^4.20.0",
    "ora": "^8.0.1",
    "chalk": "^5.3.0",
    "ts-morph": "^21.0.1",
    "winston": "^3.11.0",
    "chokidar": "^3.5.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/glob": "^8.1.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  }
}
